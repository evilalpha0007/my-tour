<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/gatewayofindia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gatewayofindiaimg"
                    android:layout_width="420dp"
                    android:layout_height="450dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/indiagate" />

                <TextView
                    android:id="@+id/gatewayofindiatxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/gateway_of_india"
                    android:textColor="#E6635E"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/redfort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/redfortimg"
                    android:layout_width="420dp"
                    android:layout_height="450dp"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/todo"
                    android:padding="15dp"
                    app:srcCompat="@drawable/redfort" />

                <TextView
                    android:id="@+id/Redforttxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="@string/red_fort"
                    android:textColor="#E6635E"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shaniwaarwada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/shaniwaarwadaimg"
                    android:layout_width="420dp"
                    android:layout_height="450dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/shaniwaar"
                    android:contentDescription="@string/to" />

                <TextView
                    android:id="@+id/shaniwaarwadatxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/shaniwaar_wada"
                    android:textColor="#FF5722"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>